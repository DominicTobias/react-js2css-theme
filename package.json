{
  "name": "react-js2css-theme",
  "version": "1.0.0",
  "description": "Converts JS theme object into CSS Variables on the fly to be consumed by your components",
  "keywords": [
    "react",
    "css",
    "variables",
    "theme"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "style": "./dist/styles.css",
  "scripts": {
    "prepare": "yarn build",
    "start": "NODE_ENV=development rollup -c --watch",
    "build": "NODE_ENV=production rollup -c",
    "test": "mocha './src/**/*.test.js'"
  },
  "author": "Dominic Tobias <dominic.tobias@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/preset-react": "^7.7.4",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.3.0",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "assert": "^2.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "mocha": "7.0.0-esm1",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-scss": "^2.1.0",
    "rollup-plugin-terser": "^5.1.3"
  },
  "dependencies": {
    "react": "^16.12.0"
  }
